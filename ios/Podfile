# platform :ios, '11.0' # This line might be generated by Flutter, we will override it
# START OF MODIFICATIONS
platform :ios, '13.0' # Set iOS deployment target to 13.0 or higher
# END OF MODIFICATIONS

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_additional_ios_build_settings(target)
  UseFlutterEmbedding(target)
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    # START OF MODIFICATIONS for build settings if needed
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0' # Redundant if platform is set, but safe
    end
    # END OF MODIFICATIONS
  end
end